<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_bg"
    tools:context=".PersonalityTest.ResultFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@color/color_bg">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_profile_bg_circle"
                    android:id="@+id/displayImg" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/color_primary_txt"
                    android:text="ISTE"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="24sp"
                    android:id="@+id/headTxt" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/color_primary_txt"
                    android:text="Captain America"
                    android:fontFamily="@font/poppins"
                    android:textSize="18sp"
                    android:id="@+id/titleTxt" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/color_secondary_txt"
                    android:text="Lorem Ipsum Lorem Ipsum LoIpsum Lorem Ipsurem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum "
                    android:fontFamily="@font/poppins"
                    android:textSize="14sp"
                    android:id="@+id/bodyTxt" />




                <TextView
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_primary_txt"
                    android:text="Detailed Results"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/scoresLayout">

                </LinearLayout>



                <TextView
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_primary_txt"
                    android:text="Strengths"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/strengthsTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_primary_txt"
                    android:text="Here, we, can, list, the, strengths, of that, personality"
                    android:fontFamily="@font/poppins"
                    android:textSize="16sp" />

                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_primary_txt"
                    android:text="Weakness"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/weeknessTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_primary_txt"
                    android:text="Here, we, can, list, the, weakness, of that, personality"
                    android:fontFamily="@font/poppins"
                    android:textSize="18sp" />

                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_primary_txt"
                    android:text="Career Options"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/careerTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_primary_txt"
                    android:text="Here, we, can, list, the, career options, of that, personality"
                    android:fontFamily="@font/poppins"
                    android:textSize="16sp" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:id="@+id/reattemptBtn"
                    android:text="Re-Take Test"
                    app:cornerRadius="16dp"
                    android:drawableEnd="@drawable/ic_cont_arrow"
                    android:layout_marginTop="24dp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/color_cta"
                    android:textSize="16sp" />


            </LinearLayout>
        </ScrollView>




</FrameLayout>