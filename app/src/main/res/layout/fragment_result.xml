<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_bg"
    tools:context=".PersonalityTest.ResultFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@color/color_bg">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_profile_bg_circle"
                    android:id="@+id/displayImg" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/color_primary_txt"
                    android:text="ISTE"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="24sp"
                    android:id="@+id/titleTxt" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/color_primary_txt"
                    android:text="Captain America"
                    android:fontFamily="@font/poppins"
                    android:textSize="18sp"
                    android:id="@+id/headTxt" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/color_secondary_txt"
                    android:text="Lorem Ipsum Lorem Ipsum LoIpsum Lorem Ipsurem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum "
                    android:fontFamily="@font/poppins"
                    android:textSize="18sp"
                    android:id="@+id/bodyTxt" />




                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_primary_txt"
                    android:text="Detailed Results"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_primary_txt"
                            android:text="10%"
                            android:id="@+id/PScorePart1Txt"
                            android:fontFamily="@font/poppins"
                            android:textSize="18sp" />

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progressPart1"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="16dp"
                            android:layout_marginStart="8dp"
                            app:trackColor="@color/color_cta"
                            app:indicatorColor="@color/progress_gray"
                            android:layout_marginEnd="8dp"
                            android:progress="10" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_cta"
                            android:text="90%"
                            android:id="@+id/NScorePart1Txt"
                            android:fontFamily="@font/poppins"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_primary_txt"
                            android:text="Extroverted"
                            android:layout_weight="1"
                            android:id="@+id/PTitlePart1"
                            android:fontFamily="@font/poppins"
                            android:textSize="18sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_cta"
                            android:text="Introvert"
                            android:textAlignment="textEnd"
                            android:layout_weight="1"
                            android:id="@+id/NTitlePart1"
                            android:fontFamily="@font/poppins"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_primary_txt"
                            android:text="10%"
                            android:id="@+id/PScorePart2Txt"
                            android:fontFamily="@font/poppins"
                            android:textSize="18sp" />

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progressPart2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="16dp"
                            android:layout_marginStart="8dp"
                            app:trackColor="@color/color_cta"
                            app:indicatorColor="@color/progress_gray"
                            android:layout_marginEnd="8dp"
                            android:progress="10" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_cta"
                            android:text="90%"
                            android:id="@+id/NScorePart2Txt"
                            android:fontFamily="@font/poppins"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_primary_txt"
                            android:text="Extroverted"
                            android:layout_weight="1"
                            android:id="@+id/PTitlePart2"
                            android:fontFamily="@font/poppins"
                            android:textSize="18sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_cta"
                            android:text="Introvert"
                            android:textAlignment="textEnd"
                            android:layout_weight="1"
                            android:id="@+id/NTitlePart2"
                            android:fontFamily="@font/poppins"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_primary_txt"
                            android:text="10%"
                            android:id="@+id/PScorePart3Txt"
                            android:fontFamily="@font/poppins"
                            android:textSize="18sp" />

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progressPart3"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="16dp"
                            android:layout_marginStart="8dp"
                            app:trackColor="@color/color_cta"
                            app:indicatorColor="@color/progress_gray"
                            android:layout_marginEnd="8dp"
                            android:progress="10" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_cta"
                            android:text="90%"
                            android:id="@+id/NScorePart3Txt"
                            android:fontFamily="@font/poppins"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_primary_txt"
                            android:text="Extroverted"
                            android:layout_weight="1"
                            android:id="@+id/PTitlePart3"
                            android:fontFamily="@font/poppins"
                            android:textSize="18sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_cta"
                            android:text="Introvert"
                            android:textAlignment="textEnd"
                            android:layout_weight="1"
                            android:id="@+id/NTitlePart3"
                            android:fontFamily="@font/poppins"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_primary_txt"
                            android:text="10%"
                            android:id="@+id/PScorePart4Txt"
                            android:fontFamily="@font/poppins"
                            android:textSize="18sp" />

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progressPart4"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="16dp"
                            android:layout_marginStart="8dp"
                            app:trackColor="@color/color_cta"
                            app:indicatorColor="@color/progress_gray"
                            android:layout_marginEnd="8dp"
                            android:progress="10" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_cta"
                            android:text="90%"
                            android:id="@+id/NScorePart4Txt"
                            android:fontFamily="@font/poppins"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_primary_txt"
                            android:text="Extroverted"
                            android:layout_weight="1"
                            android:id="@+id/PTitlePart4"
                            android:fontFamily="@font/poppins"
                            android:textSize="18sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_cta"
                            android:text="Introvert"
                            android:textAlignment="textEnd"
                            android:layout_weight="1"
                            android:id="@+id/NTitlePart4"
                            android:fontFamily="@font/poppins"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_primary_txt"
                    android:text="Strengths"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/strengthsTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_primary_txt"
                    android:text="Here, we, can, list, the, strengths, of that, personality"
                    android:fontFamily="@font/poppins"
                    android:textSize="18sp" />

                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_primary_txt"
                    android:text="Weakness"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/weeknessTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_primary_txt"
                    android:text="Here, we, can, list, the, weakness, of that, personality"
                    android:fontFamily="@font/poppins"
                    android:textSize="18sp" />

                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_primary_txt"
                    android:text="Career Options"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/careerTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_primary_txt"
                    android:text="Here, we, can, list, the, career options, of that, personality"
                    android:fontFamily="@font/poppins"
                    android:textSize="18sp" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:id="@+id/reattemptBtn"
                    android:text="Re-Take Test"
                    app:cornerRadius="16dp"
                    android:drawableEnd="@drawable/ic_cont_arrow"
                    android:layout_marginTop="16dp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/color_cta"
                    android:textSize="16sp" />


            </LinearLayout>
        </ScrollView>




</FrameLayout>