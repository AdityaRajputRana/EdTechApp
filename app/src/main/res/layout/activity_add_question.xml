<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    tools:context=".AddQuestionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical"
        android:id="@+id/rootLayout">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Add a question"
            android:textSize="20sp"
            android:textColor="@color/color_primary_txt"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_fg"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:hint="Your Question"
            android:textColor="@color/color_primary_txt"
            android:textColorHint="@color/color_secondary_txt"
            android:id="@+id/headEt" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_fg"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/color_primary_txt"
            android:textColorHint="@color/color_secondary_txt"
            android:hint="Image Link"
            android:id="@+id/imgEt" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_fg"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:hint="Tags, separated by comma"
            android:textColor="@color/color_primary_txt"
            android:textColorHint="@color/color_secondary_txt"
            android:id="@+id/tagsEt" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_fg"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:hint="Body of question"
            android:gravity="top"
            android:minHeight="150dp"
            android:textColor="@color/color_primary_txt"
            android:textColorHint="@color/color_secondary_txt"
            android:id="@+id/bodyEt" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/continueBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:backgroundTint="@color/color_cta"
            android:text="Post Question"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins"
            android:elevation="16dp"
            android:visibility="visible"
            android:layout_marginTop="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cornerRadius="16dp" />



    </LinearLayout>

</ScrollView>