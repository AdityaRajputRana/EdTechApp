<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_ticket_card"
    android:layout_margin="8dp"
    android:padding="16dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/typeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_round_orange"
        android:text="Online"
        android:fontFamily="@font/poppins"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/titleHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event"
        app:layout_constraintTop_toBottomOf="@id/typeTxt"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/color_secondary_txt" />

    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not Submitted"
        app:layout_constraintTop_toBottomOf="@id/titleHead"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/locationHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Place"
        app:layout_constraintTop_toBottomOf="@id/titleTxt"
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/color_secondary_txt" />

    <TextView
        android:id="@+id/locationTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vivekanand Auditorium, XYZ, New Delhi"
        app:layout_constraintTop_toBottomOf="@id/locationHead"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/locationTxt"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/leftLayout"
        android:layout_marginBottom="32dp"
        app:layout_constraintEnd_toStartOf="@id/rightLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomLayout"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="16sp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/color_secondary_txt" />

        <TextView
            android:id="@+id/dateTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not Submitted"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Section"
            android:textSize="16sp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/color_secondary_txt" />

        <TextView
            android:id="@+id/sectionTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="16sp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/color_secondary_txt" />

        <TextView
            android:id="@+id/priceTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Free"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/leftLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/leftLayout"
        app:layout_constraintBottom_toBottomOf="@id/leftLayout"
        android:id="@+id/rightLayout"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textSize="16sp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/color_secondary_txt" />

        <TextView
            android:id="@+id/timeTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not Submitted"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seat"
            android:textSize="16sp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/color_secondary_txt" />

        <TextView
            android:id="@+id/seatTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order"
            android:textSize="16sp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/color_secondary_txt" />

        <TextView
            android:id="@+id/orderTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2165405"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/bottomLayout"
        app:layout_constraintTop_toBottomOf="@id/leftLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="bottom"
        android:orientation="vertical">


        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/leftLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/qrImage" />


        <TextView
            android:id="@+id/ticketTxt"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show this at the entrance."
            android:textSize="16sp"
            android:textAlignment="center"
            android:fontFamily="@font/poppins"
            android:textColor="@color/color_secondary_txt" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/continueBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/color_cta"
            android:drawableRight="@drawable/ic_cont_arrow"
            android:fontFamily="@font/poppins"
            android:padding="16dp"
            android:text="Launch Meeting"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="gone"
            app:cornerRadius="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You can access this ticket again in subscribed events under your profile page."
            android:textSize="14sp"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/color_secondary_txt" />

    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>