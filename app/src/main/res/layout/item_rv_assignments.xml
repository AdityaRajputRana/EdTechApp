<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_round_fg"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_baseline_assignment_24" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="This is name of assignment"
            android:textColor="@color/color_primary_txt"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unit name would be shown here"
        android:layout_marginTop="8dp"
        android:textColor="@color/color_secondary_txt"
        android:fontFamily="@font/poppins"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingEnd="16dp"
            android:gravity="center"
            android:backgroundTint="@color/color_bg"
            android:background="@drawable/bg_round_orange">

            <ImageView
                android:id="@+id/statusImg"
                android:src="@drawable/ic_baseline_assignment_24"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textColor="@color/color_primary_txt"
            android:fontFamily="@font/poppins"
            android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"
            android:text="View >"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/color_cta"
            android:fontFamily="@font/poppins"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>