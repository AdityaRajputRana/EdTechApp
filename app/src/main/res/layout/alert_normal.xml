<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_bg"
    android:padding="2dp"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="Unit Completed"
        android:padding="8dp"
        android:textSize="18sp"
        android:textColor="@color/color_primary_txt"
        android:fontFamily="@font/poppins_medium" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:lottie_rawRes="@raw/complete"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"/>

    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/message"
        android:text="You have finished all the lessons in this unit. Other locked units have opened now! Keep moving."
        android:padding="8dp"
        android:textSize="16sp"
        android:textColor="@color/color_secondary_txt"
        android:fontFamily="@font/poppins" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_secondary_txt" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/actionBtn"
        android:background="@android:color/transparent"
        android:text="Okay"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_medium"
        android:textSize="18sp"
        android:textColor="@color/color_primary_txt" />



</LinearLayout>